   <%= f.text_field :name, required: true, class: 'form-control' %>

   <br>
   
   <%= f.label :email %><br>
   <%= f.text_field :email, required: true, class: 'form-control' %>

   <br>

   <%= f.label :message %><br>
   <%= f.text_area :message,required: true, as: :text, class: 'form-control' %>

    </div></div>

   <div style="margin-left: 100px;">

    <%= f.submit 'Send Message', class:'card btn btn-dark mt-3 mb-3' %>
    <% end %></div>
  </div>
</div></div></div></div></div>