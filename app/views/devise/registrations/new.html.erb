<div class="container mb-2 pb-2 col-md-3 mr-1">
<div class="row has text-warning">
  
<section class="form-auth text-align-left">
<h4 class="has text-dark has text-center">Be cool and sign up if you dont have an account:</h4>
<div style="background-color: #000075;">
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <h4 class="h4 font-weight-normal text-muted">Please Sign Up</h4>

  <form class="form-signup">
       
   <div class="pl-1 pr-1">
       <%= f.label :Username %>
       <label for="name"></label>
        <%= f.text_field :name, class: "form-control", placeholder: "Enter Username" %>
        
        <%= f.label :Email %>
        <label for="email"></label>
        <%= f.text_field :email, class: "form-control", placeholder: "Enter Email", tabindex: "2" %>

        <%= f.label :telephone_number %>
        <label for="telephone"></label>
        <%= f.text_field :telephone_number, class: "form-control", placeholder: "Enter Telephone number", tabindex: "2" %>
      
        <%= f.label :password %>
        <label for="password"></label>
          <% if@minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        <%= f.password_field :password, class: "form-control", tabindex: "2", placeholder: "Password", required: true %>
      
      <%= f.label :password_confirmation %>
      <label for="password_confirmation"></label>
      <%= f.password_field :password_confirmation, class: "form-control", tabindex: "2", placeholder: "Password Confirmation", required: true %>


    <div class="checkbox mt-3">
    <label>
      <%= f.check_box :terms_and_conditions %><span class="has text-white"> I accept the terms and conditions <a href="/products/terms_and_conditions" style="color:dodgerblue"></span><strong>Terms & Privacy</a></strong>
    </label></div>

      <div class="text-center"><%= f.submit "Sign up", class:"btn btn-success"%>

  </form>
<%= render "devise/shared/links" %>
<div class="mb-3"></div></div>
</div>
</div>
</div>
<% end %>
</div>
</section>
</main></div></div></div>



