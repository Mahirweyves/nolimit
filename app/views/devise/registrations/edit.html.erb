<main>
  <div class="container-fluid col-md-5 mb-5">
<section class="section">
  <div class="container">
    <div><div class="row has text-warning">
    <div class="columns is-centered">
      <div class="column is-4">
      
       <h2 class="title is-3 text-center">Edit <%= resource_name.to_s.humanize %></h2></div>

      <div style="background-color: #000075;">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>
           
   <div class="ml-4 pt-4">              
  <div class="field mb-4">
    <%= f.label :Username %><br/>
    <%= f.email_field :name, size:35, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field mb-4">
    <%= f.label :email %><br/>
    <%= f.email_field :email, size:35, autofocus: true, autocomplete: "email" %>
  </div>

          <div class="field">
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>
           </div>
  <div class="field mb-4">
    <%= f.label :telephone_number %><br />
    <%= f.email_field :telephone_number, size:35, autofocus: true, autocomplete: "telephone" %>
  </div>

  <div class="field mb-4">
    <%= f.label :password %> <i class="text-danger">(leave it a blank if you don't want to change password)</i><br />
    <%= f.password_field :password, size:35, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <em class="text-primary"><%= @minimum_password_length %> characters minimum</em>  
    <% end %>
  </div>
          

  <div class="field mb-4">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, size:35, autocomplete: "new-password" %>
  </div>

  <div class="field mb-4">
    <%= f.label :current_password %>  <i class="text-danger">(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, size:35, autocomplete: "current-password" %>
  </div>


        <%= f.button :submit, "Update", class:"btn btn-success" %>
        <%= link_to "Back", products_path, class:"btn btn-primary" %>

      <% end %>

        <hr>
        <h3 class="title is-5 has text-warning">Cancel my account</h3>
        <p>Unhappy? <%= link_to "Cancel my account", registration_path(current_user), data: { confirm: "Are you sure?" }, method: :delete %></p>
       
       <div class="mb-5"></div>

      </div></div>
    </div>
  </div>
</section>
</main>




