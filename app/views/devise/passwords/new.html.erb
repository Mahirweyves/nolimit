<section class="section ml-3">
  <div class="container col-md-3 mr-1">
    <div class="row has text-warning">
    <div class="columns is-centered">
      
      <div class="column is-4 mb-5 has text-center">
        
        <h4 class="title is-2 mb-4 ml-5 pl-5">Forgot your password?</h4>

        <div style="background-color: #000075;">
         <h6><p class="pl-4 pb-2">Please fill in your Email</p></h6>
         

        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= f.error_notification %>
          
            <div class="control">
              <div class="field">
                <div class="mb-2">
                 <%= f.input :email, required: true, autofocus: true, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
               </div>
              </div>
            </div>
  
          
          <%= f.button :submit, "Send me reset password instructions", class:"button is-outlined mt-4 mb-3 btn-success" %>
          
        <% end %>
        
        <%= render "devise/shared/links" %>

    </div>
    </div>
  </div></div></div></div>
</section>
