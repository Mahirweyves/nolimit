<div class="container mb-3 pb-3 col-md-4 mr-1">
<%= simple_form_for([@product, @product.comments.build]) do |f| %>
<!--
collection.build(attributes = {}, …) Returns one or more new objects of the collection type that have been instantiated with attributes and linked to this object through a foreign key, but have not yet been saved. Note: This only works if an associated object already exists, not if it‘s nil!
-->              
<%= f.label :name %>
      	<div class="control">
      <%= f.text_field :name, class:'form-control',required: true, size:35, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" } %><br>
     </div>
     

<%= f.label :comment %>
      <div class="field">
      	<div class="control">
      <%= f.text_area :comment, class:'form-control',required: true, input_html: { class: "textarea" }, wrapper: false, label_html: { class: "label" } %><br>
     </div>
     </div>

<%= f.button :submit, 'Leave a reply', class:'card has text-warning' %>
<% end %>

</div>
